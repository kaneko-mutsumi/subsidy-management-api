<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.subsidy_management_api.mapper.SubsidyApplicationMapper">

  <insert id="insert"
    parameterType="com.example.subsidy_management_api.domain.SubsidyApplication"
    useGeneratedKeys="true"
    keyProperty="id">
    INSERT INTO subsidy_applications (
    applicant_id,
    application_date,
    amount_requested,
    status
    ) VALUES (
    #{applicantId},
    #{applicationDate},
    #{amountRequested},
    #{status}
    )
  </insert>

</mapper>
